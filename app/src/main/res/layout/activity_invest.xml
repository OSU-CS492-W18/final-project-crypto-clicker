<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osu.cryptoclicker.InvestController">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textSize="25sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/sell_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/buy_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#dadada" />

        <TextView
            android:text="@string/current_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/usd_balance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/btc_balance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#dadada" />

        <TextView
            android:text="@string/invest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/et_btc_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:hint="@string/amount_hint"/>

        <Button
            android:id="@+id/bt_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:clickable="true"/>

        <Button
            android:id="@+id/bt_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sell"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_loading_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="@string/network_error"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/pb_loading_bar_invest"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="top|center_horizontal"
            android:visibility="invisible"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
